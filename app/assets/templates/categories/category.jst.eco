<div class="title">
  <a href="/#categories/<%= @category.get("id") if @category.get("id")%>" ><%= @category.get("title") %></a>
</div>
<% if RecipeMe.currentUser: %>
    <div class="actions">
      <a href="/#categories/<%= @category.get("id") %>/edit" class="btn btn-success btn-xs glyphicon glyphicon-edit edit-category"></a>
      <a href="#" class="btn btn-danger btn-xs glyphicon glyphicon-remove destroy-category"></a>
    </div>
<% end %>