<p class="description">
  <% if @step.get("image"): %>
      <a href="<%= @step.get("image").name.url %>" data-lightbox="step" >
        <img src="<%= @step.get("image").name.url %>" height="100" width="100" class="step-image img-thumbnail"/>
      </a>
  <% end %>
  <%- @step.get("description") %>
</p>